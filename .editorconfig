root = true

[*]
indent_style = space
# indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{js,mjs,ts,json}]
# indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{html,html,xml}]
indent_size = 2

[*.{csv,tsv}]
indent_style = tab
trim_trailing_whitespace = false
